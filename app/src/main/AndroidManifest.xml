<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caihao.simple">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SingleImageBrowseActivity"
            android:label="单张图片查看"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ManyImageBrowseActivity"
            android:label="多张图片查看"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MixImageBrowseActivity"
            android:label="混合多张图片查看"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.caihao.imagebrowse.ImageBrowseActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>